{
  "name": "octopus",
  "version": "1.0.0",
  "description": "yet another CRM",
  "main": "index.js",
  "repository": "https://github.com/denisgutarin/octopus.git",
  "author": "Denis Gutarin <denis.gutarin@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "core",
    "dispatcher",
    "gui"
  ],
  "scripts": {
    "gui": "yarn workspace @octopus/gui start",
    "dispatcher": "yarn workspace @octopus/dispatcher start",
    "core": "yarn workspace @octopus/core start",
    "start": "concurrently --kill-others-on-fail \"yarn dispatcher\" \"yarn gui\""
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
