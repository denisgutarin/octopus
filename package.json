{
  "name": "octopus",
  "version": "1.0.0",
  "description": "yet another CRM",
  "main": "index.js",
  "repository": "https://github.com/denisgutarin/octopus.git",
  "author": "Denis Gutarin <denis.gutarin@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "common",
    "server",
    "webapp"
  ],
  "scripts": {
    "webapp": "yarn workspace @octopus/webapp start",
    "server": "yarn workspace @octopus/server start",
    "common": "yarn workspace @octopus/common start",
    "start": "concurrently --kill-others-on-fail \"yarn common\"  \"yarn server\" \"yarn webapp\""
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
